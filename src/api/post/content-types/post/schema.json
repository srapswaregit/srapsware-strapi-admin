{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "posts"
    },
    "post_categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::post-category.post-category",
      "mappedBy": "posts"
    },
    "excerpt": {
      "type": "richtext",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "seo": {
      "type": "component",
      "repeatable": true,
      "component": "shared.seo"
    }
  }
}
